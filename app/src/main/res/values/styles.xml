<resources>

    <!-- Tema base de la aplicacion -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <!--Estilos del menu principal-->
    <style name="EstiloBotonesMenu" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:fontFamily">@font/bayu_prahara2</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/btn_normal</item>
    </style>

    <style name="EstiloTextoMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/bayu_prahara2</item>
    </style>

    <style name="EstiloTextoMenu.Record">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Estilos del panel superior del juego-->
    <style name="EstiloPanelJuego">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/bayu_prahara2</item>
    </style>

    <style name="EstiloPanelJuego.Texto">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="EstiloPanelJuego.TextoEspecial">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/colorAmarillo</item>
    </style>

    <style name="EstiloPanelJuego.Boton">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--Estilos botones juego-->
    <style name="EstiloJuegoBoton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="EstiloJuegoBoton.Verde">
        <item name="android:layout_column">0</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/btn_verde</item>
    </style>

    <style name="EstiloJuegoBoton.Rojo">
        <item name="android:layout_column">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/btn_rojo</item>
    </style>

    <style name="EstiloJuegoBoton.Amarillo">
        <item name="android:layout_column">0</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_row">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/btn_amarillo</item>

    </style>

    <style name="EstiloJuegoBoton.Azul">
        <item name="android:layout_column">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_row">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/btn_azul</item>
    </style>

    <!--Estilos vista crear y unirse-->
    <style name="Texto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/bayu_prahara2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Texto.BotonSalirJuego">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/btn_normal</item>
    </style>

    <style name="BotonesInferiores">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/bayu_prahara2</item>
    </style>

    <style name="Texto.TablaRegistros">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Texto.AcercaCabecera">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Texto.Acerca">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
